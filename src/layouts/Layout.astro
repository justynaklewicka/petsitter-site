---
const { title } = Astro.props;
const props = Astro.props ?? {};
const fm = props.frontmatter ?? props ?? {};
const images = fm.images ?? [];
---

<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
  	<div class="header-image"></div>
    <nav>
      <a href="/">Strona główna</a>
      <a href="/o-mnie">O mnie</a>
      <a href="/uslugi">Usługi i cennik</a>
      <a href="/galeria">Galeria zwierząt</a>
      <a href="/regulamin">Regulamin</a>
      <a href="/kontakt">Kontakt</a>
    </nav>

    <main class="container">
      <slot />
      {images && images.length ? (
        <div class="gallery">
          {images.map((img) => (
            <figure>
              <img src={img.src} alt={img.caption ?? "zdjęcie"} loading="lazy" />
              {img.caption ? <figcaption>{img.caption}</figcaption> : null}
            </figure>
          ))}
        </div>
      ) : null}

    </main>

    <footer>
    	<div class="container">
      		<!-- <p><div class="footer-image"></div>  -->
          © 2025 Sivoriel Design | kontakt: justyna.klewicka@outlook.com</p>
  		</div>
    </footer>
  </body>
</html>
